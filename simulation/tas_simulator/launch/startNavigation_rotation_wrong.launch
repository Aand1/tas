<?xml version="1.0"?>
<launch>
  <!-- Start Navigation Stack -->
 

  <node pkg="tf" type="static_transform_publisher" name="map_to_odom" output="screen" args="0 0 0  0 0 0 map odom 100" />

  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
    <param name="map_frame" value="odom"/>
    <param name="odom_frame" value="base_link"/>
    <param name="map_size" value="2048"/>
    <param name="pub_map_odom_transform" value="false"/>
    <param name="pub_map_scanmatch_transform" value="false"/>
  </node>


  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization_node" output="screen">
    <param name="frequency" value="100"/>
    <param name="two_d_mode" value="true"/>
    <param name="pose0" value="/poseupdate"/>
     <!--<param name="pose0_relative" value="true"/>-->
    
    <param name="world_frame" value="odom"/>
    <param name="odom_frame" value="odom"/>
    <param name="base_link_frame" value="base_link"/>

    <rosparam param="pose0_config">
      [true, true,  true,
      true,  true,  true,
      false, false, false,
      false, false, false,
      false, false, false]
    </rosparam>
 
    <param name="imu0" value="/imu"/>
    <param name="imu0_remove_gravitational_acceleration" value="true"/>
    <rosparam param="imu0_config">
      [false, false, false,
      true,  true,  true,
      false, false, false,
      true,  true,  true,
      true,  true,  true]
    </rosparam>

  </node>

  
      
  <node pkg="map_server" type="map_server" name="map_server" output="screen" args="$(find tas)/launch/config/map_server/LSR_3.yaml">
    <remap from="/map" to="/map_server_map"/>
  </node>
  
  <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">
    <rosparam file="$(find tas)/launch/config/move_base/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find tas)/launch/config/move_base/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find tas)/launch/config/move_base/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find tas)/launch/config/move_base/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find tas)/launch/config/move_base/base_local_planner_params.yaml" command="load" />
  </node>
  
</launch>
