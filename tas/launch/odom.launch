<?xml version="1.0"?>
<launch>
  <param name="/use_sim_time" value="false"/>

<!--<node pkg="tf" type="static_transform_publisher" name="base_link_to_odom" args="0 0 0 0 0 0 /odom /base_link 40" />-->

  
  <!-- merge lasers -->
  <node pkg="ira_laser_tools" name="laserscan_multi_merger" type="laserscan_multi_merger" output="screen">
    <param name="destination_frame" value="base_link"/>
    <param name="scan_destination_topic" value="/scan"/>
    <param name="laserscan_topics" value ="/scan_front /scan_back" />
    <rosparam>
      angle_min: -3.14159
      angle_max: 3.14159
      range_min: 0
      range_max: 100
    </rosparam>
  </node>

  <!-- Hector mapping -->
  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
    <param name="map_frame" value="map"/>
    <param name="odom_frame" value="odom"/>
    <param name="scanmatcher_frame" value="base_link"/>

    <param name="map_size" value="2048"/>
    <param name="pub_map_odom_transform" value="true"/>
    <param name="pub_map_scanmatch_transform" value="false"/>
  </node>

  <!-- EKF -->
  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization_node" output="screen">
    <param name="map_frame" value="map"/>
    <param name="world_frame" value="odom"/>
    <param name="odom_frame" value="odom"/>
    <param name="base_link_frame" value="base_link"/>

    <param name="print_diagnostics" value="true"/>
    <param name="frequency" value="500"/>
    <param name="two_d_mode" value="true"/>

    <param name="pose0" value="/poseupdate"/>
    <param name="pose0_relative" value="true"/>    
    <rosparam param="pose0_config">
      [true, true,  true,
      true,  true,  true,
      false, false, false,
      false, false, false,
      false, false, false]
    </rosparam>
 
    <param name="imu0" value="/imu/data"/>
    <param name="imu0_remove_gravitational_acceleration" value="true"/>
    <rosparam param="imu0_config">
      [false, false, false,
      true,  true,  true,
      false, false, false,
      true,  true,  true,
      true,  true,  true]
    </rosparam>
    <param name="imu0_differential" value="true"/>

  </node> 

</launch>
